@model RolePermission.Model.SMFIELD
@{
    ViewBag.SubTitle = "修改 数据字典";
    Layout = "~/Views/Shared/Save.cshtml";
}
@using (Html.BeginForm((string) ViewBag.FormAction, "SysField", FormMethod.Post, new {id = "form1"}))
{
    @Html.HiddenFor(model => model.ID)
    <table id="tbCreate" class="usertableborder" align="center">
        <tr class="usertablerow1">
            <td class="_width">
                @Html.LabelFor(model => model.MYTEXTS)：
            </td>
            <td>
                <input type="text" value="@Html.ValueFor(model => model.MYTEXTS)" name="MYTEXTS" class="easyui-textbox" missingmessage="不能为空"
                       validtype="length[0,50]" invalidmessage="长度不可超过50"/>
            </td>
            <td class="_width">
                <a class="anUnderLine" onclick="showModalOnly('PARENTID', '../../SysField');">
                    @Html.LabelFor(model => model.PARENTID)
                </a>
            </td>
            <td class="width6">
                <div id="checkPARENTID">
                    @if (Model != null)
                    {
                        if (Model.PARENTID != null)
                        {
                            <table id="@Model.PARENTID" class="deleteStyle">
                                <tr>
                                    <td>
                                        <img alt="删除" title="点击删除" src="../../../Images/deleteimge.png" onclick="deleteTable('@Model.PARENTID', 'PARENTID');"/>
                                    </td>
                                    <td>
                                        @Model.SMFIELD2.MYTEXTS
                                    </td>
                                </tr>
                            </table>
                        }
                    }
                </div>
                @Html.HiddenFor(model => model.PARENTID)
            </td>
        </tr>
        <tr class="usertablerow2">
            <td class="_width">
                @Html.LabelFor(model => model.MYTABLES)：
            </td>
            <td>
                <input type="text" name="MYTABLES" value="@Html.ValueFor(model => model.MYTABLES)" class="easyui-textbox" missingmessage="不能为空"
                       validtype="length[0,50]" invalidmessage="长度不可超过50"/>
            </td>
            <td class="_width">
                @Html.LabelFor(model => model.MYCOLUMS)：
            </td>
            <td class="width2">
                <input type="text" name="MYCOLUMS" value="@Html.ValueFor(model => model.MYCOLUMS)" class="easyui-textbox" missingmessage="不能为空"
                       validtype="length[0,50]" invalidmessage="长度不可超过50"/>
            </td>
        </tr>
        <tr class="usertablerow1">
            <td class="_width">
                @Html.LabelFor(model => model.SORT)：
            </td>
            <td colspan="3" class="width2">
                <input type="text" name="SORT" value="@Html.ValueFor(model => model.SORT)" class="easyui-numberbox" missingmessage="不能为空"
                       validtype="length[0,3]" invalidmessage="长度不可超过3"/>
            </td>
        </tr>
        <tr class="usertablerow2">
            <td class="_width">
                @Html.LabelFor(model => model.REMARK)：
            </td>
            <td colspan="3" style="overflow-x: hidden; word-break: break-all;" class="remark">
                <textarea style="width: 470px;"  cols="30" name="REMARK" rows="3" class="easyui-validatebox" validType="length[0,200]" invalidMessage="长度不可超过200">@Html.ValueFor(model => model.REMARK)</textarea>
            </td>
        </tr>
        <tr class="usertablerow1">
            <td colspan="4" style="height: 30px; text-align: center;">
                <a href='#' onclick='$("form").submit()' class="easyui-linkbutton" data-options="iconCls:'icon-edit'">
                    修改
                </a>
                <a href='#' onclick="javascript:resetData();" class="easyui-linkbutton" data-options="iconCls:'icon-redo'"> 重置</a>
                <a href='#' onclick="javascript:formClose();" class="easyui-linkbutton" data-options="iconCls:'icon-undo'"> 取消</a>
            </td>
        </tr>
    </table>
}